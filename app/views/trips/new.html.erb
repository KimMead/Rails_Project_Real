<h4>Create A New Trip</h4> 

<%= form_for :trip, url: user_trips_path do |f| %>
  <% if @state %> 
    <%= f.hidden_field :state_id, value: @state.id %>  
    <%= f.label :state %>
    <%= f.text_field :state, value: @state.name %>
    <% else %> 
    <%= f.label :state_id, "Select State" %>
    <%= f.collection_select :state, State.all, :id, :name, :include_blank => false %>
    <br/>
    <br/>
    <%= f.label :attraction %>
    <%= f.text_field :attraction, value: @attraction %>
    <br/>
    <br/>
    <%= f.submit %>
    <% end %>
  <% end %>